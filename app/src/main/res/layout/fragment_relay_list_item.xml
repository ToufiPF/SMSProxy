<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/relay_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Relay name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/relay_delete"
        app:layout_constraintEnd_toStartOf="@id/relay_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/relay_delete"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/relay_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/content_description_delete_relay_configuration"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>